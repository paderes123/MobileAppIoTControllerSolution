<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="MobileAppIoTController.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:MobileAppIoTController"
    Shell.FlyoutBehavior="Disabled"
    xmlns:views="clr-namespace:MobileAppIoTController.Views"
    Title="MobileAppIoTController">

    <TabBar FlyoutDisplayOptions="AsMultipleItems">
        <ShellContent
            Title="Switch States"
            Icon="thermometer.png"
            ContentTemplate="{DataTemplate views:SwitchStatesPage}"
            Route="SwitchStatesPage" />

        <ShellContent
            Title="Text Message"
            Icon="message.png"
            ContentTemplate="{DataTemplate views:TextMessagePage}"
            Route="TextMessagePage" />

        <ShellContent
            Title="Temperature"
            Icon="light_switch.png"
            ContentTemplate="{DataTemplate views:TemperaturePage}"
            Route="TemperaturePage" />
    </TabBar>
</Shell>
    
    
    

    
    
    